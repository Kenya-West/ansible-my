---

services:
  wg:
    image: ghcr.io/wg-easy/wg-easy
    container_name: wg
    volumes:
      - etc_wireguard:/etc/wireguard
    networks:
      - {{ docker_vpn_network }}
    ports:
      - "${WG_PORT}:51920/udp"
      - "${PORT}:51821/tcp"
    restart: unless-stopped
    env_file:
      - .env
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    sysctls:
      - net.ipv4.ip_forward=1
      - net.ipv4.conf.all.src_valid_mark=1
    labels:
      caddy: "${DOMAIN}"
      caddy.import: "logging ${DOMAIN}"
      {% raw %}caddy.0_reverse_proxy: "{{ upstreams ${PORT}}}"{% endraw %}


networks:
  {{ docker_vpn_network }}:
    external: true

volumes:
  etc_wireguard:
