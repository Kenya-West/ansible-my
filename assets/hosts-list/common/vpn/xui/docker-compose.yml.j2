---

services:
  xui:
    image: alireza7/x-ui
    container_name: xui
    hostname: ${XUI_HOSTNAME}
    volumes:
      - type: bind
        source: ./db/x-ui.db
        target: /etc/x-ui/x-ui.db
    env_file:
      - .env
    environment:
      XRAY_VMESS_AEAD_FORCED: "false"
    tty: true
    restart: unless-stopped
    networks:
      - {{ docker_service_vars.network.name }}
    ports:
      - "${XUI_WG_PORT}:${XUI_WG_PORT}/udp"
      - "${XUI_VLESS_PORT}:${XUI_VLESS_PORT}"
      - "${XUI_SS2022_PORT}:${XUI_SS2022_PORT}"
      - "${XUI_SUB_PORT}:${XUI_SUB_PORT}"
    labels:
      caddy: "${DOMAIN}"
      caddy.0_import: "logging ${DOMAIN}"
      caddy.1_import: "cors"
      {% raw %}caddy.3_reverse_proxy: "{{ upstreams ${XUI_DASHBOARD_PORT} }}"{% endraw %}


networks:
  {{ docker_service_vars.network.name }}:
    external: true

volumes:
  certs:
    external: true
    name: caddy_caddy-certs