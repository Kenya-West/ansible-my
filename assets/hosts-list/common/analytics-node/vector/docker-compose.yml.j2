---
services:
  vector:
    image: timberio/vector:latest-debian
    cpus: 0.5
    mem_limit: 200m
    container_name: vector
    environment:
      - HOST_MACHINE={{ inventory_hostname }}
    volumes:
      - /run/systemd/journal/socket:/run/systemd/journal/socket:ro
      - /var/log/journal:/var/log/journal:ro
      - ./config/vector.yaml:/etc/vector/vector.yaml:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    networks:
      - {{ analytics_node_network_name }}
      - {{ docker_vpn_network }}
    labels:
      caddy: "${SERVICE_DOMAIN}:${EXTERNAL_PORT}"
      caddy.import: "logging ${SERVICE_DOMAIN}-vector"
      caddy.basic_auth:
{% for user in vector_exporter_server_users %}
      caddy.basic_auth.{{user.name}}: "${BASIC_AUTH_USER_{{user.name | upper}}}"
{% endfor %}
      {% raw %}caddy.reverse_proxy: "{{ upstreams ${SERVICE_PORT_INTERNAL} }}"{% endraw %}

    restart: unless-stopped

networks:
  {{ analytics_node_network_name }}:
    external: true
  {{ docker_vpn_network }}:
    external: true