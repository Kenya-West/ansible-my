---
services:
  fail2ban_exporter:
    image: registry.gitlab.com/hctrdev/fail2ban-prometheus-exporter:latest
    cpus: 0.5
    mem_limit: 200m
    container_name: "${SERVICE_NAME}"
    env_file:
      - .env
    volumes:
      - /var/run/fail2ban/:/var/run/fail2ban:ro
    networks:
      - {{ analytics_node_network_name }}
    restart: unless-stopped

  proxy:
    image: nginx:latest
    container_name: "${SERVICE_NAME}_proxy"
    cpus: 0.5
    mem_limit: 200m
    env_file:
      - .env
    ports:
{% if domains_keys.fail2ban_exporter is defined %}
      - "${EXTERNAL_PORT}:443/tcp"
{% else %}
      - "${EXTERNAL_PORT}:80/tcp"
{% endif %}
    networks:
      - {{ analytics_node_network_name }}
    volumes:
      - ./nginx/templates:/etc/nginx/templates
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/.htpasswd:/etc/nginx/.htpasswd:ro
{% if domains_keys.fail2ban_exporter is defined %}
      - {{ cert_location_root_path }}:/etc/letsencrypt:ro
{% endif %}
    restart: unless-stopped

networks:
  {{ analytics_node_network_name }}:
    external: true