{% if domains_keys.observability is defined %}
server {
    listen 80;
    server_name ${SERVICE_DOMAIN};
    
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    server_name ${SERVICE_DOMAIN};
    
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/${CERTS_SUBPATH_CRT};
    ssl_certificate_key /etc/letsencrypt/${CERTS_SUBPATH_KEY};

    location / {
        auth_basic "Restricted Access";
        auth_basic_user_file /etc/nginx/.htpasswd;

        proxy_pass http://${SERVICE_NAME}:${SERVICE_PORT_INTERNAL}/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
    }
}
{% else %}
server {
    server_name ${SERVICE_DOMAIN};
    
    listen 80;

    location / {
        auth_basic "Restricted Access";
        auth_basic_user_file /etc/nginx/.htpasswd;

        proxy_pass http://${SERVICE_NAME}:${SERVICE_PORT_INTERNAL}/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
    }
}
{% endif %}
