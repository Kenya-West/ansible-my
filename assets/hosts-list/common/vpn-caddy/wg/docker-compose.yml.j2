---

services:
  wg:
    image: ghcr.io/wg-easy/wg-easy
    container_name: ${SERVICE_NAME}
    volumes:
      - ./wg-easy:/etc/wireguard
    networks:
      - {{ docker_vpn_network }}
    ports:
      - "${WG_PORT}:51920/udp"
    restart: unless-stopped
    env_file:
      - .env
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    sysctls:
      - net.ipv4.ip_forward=1
      - net.ipv4.conf.all.src_valid_mark=1
    labels:
      caddy: "${SERVICE_DOMAIN}:${EXTERNAL_PORT:-443}"
      caddy.handle_path: "/{{ path_to_internal_services_predefined_full }}/${SERVICE_NAME}/*"
      caddy.handle_path.import: "logging ${SERVICE_DOMAIN}-wg"
      {% raw %}caddy.handle_path.reverse_proxy: "{{ upstreams ${SERVICE_PORT_INTERNAL} }}"{% endraw %}


networks:
  {{ docker_vpn_network }}:
    external: true

volumes:
  etc_wireguard:
