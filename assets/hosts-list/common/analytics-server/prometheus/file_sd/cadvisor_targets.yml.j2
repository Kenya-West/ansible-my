{%- set node_list = [] -%}
{%- for host in groups['analytics_node'] -%}
  {%- set hv = hostvars[host] -%}

  {%- if (hv.domains_keys|default({})).cadvisor is defined or hv.cadvisor_proxy_server_hostname is defined -%}

    {# Skip adding the host if domains_keys.cadvisor contains example.tld #}
    {%- set skip_host = False -%}
    {%- if hv.domains_keys is defined and hv.domains_keys.cadvisor is defined and 'example.tld' in hv.domains_keys.cadvisor -%}
      {%- set skip_host = True -%}
    {%- endif -%}

    {%- if not skip_host -%}

      {# 1. Hostname fallback logic #}
      {%- set target_hostname = hv.get('cadvisor_proxy_server_hostname', hv.domains_keys.cadvisor) -%}

      {# 2. Port fallback #}
      {%- set port = hv.get('cadvisor_proxy_server_url_port', hv.cadvisor_external_port) -%}
      {%- set final_target = target_hostname ~ (':' ~ port if port is defined else '') -%}

      {# 3. Metrics path fallback logic #}
      {%- set metrics_path = hv.get('cadvisor_proxy_server_url_path', hv.cadvisor_web_telemetry_path) -%}
      {%- if not metrics_path -%}
        {%- set metrics_path = '/metrics' -%}
      {%- endif -%}

      {# 4. Hostname fallback logic #}
      {%- set hostname = hv.get('cadvisor_proxy_server_label', hv.inventory_hostname) -%}

      {# 5. Build the item we will append to the list #}
      {%- set item = {
        'targets': [ final_target ],
        'labels': {
          '__metrics_path__': metrics_path,
          'hostname': hostname
        }
      } -%}

      {# 5. Avoid duplicates if needed #}
      {%- if item not in node_list -%}
        {%- set _ = node_list.append(item) -%}
      {%- endif -%}
    {%- endif -%}
  {%- endif -%}
{%- endfor -%}

