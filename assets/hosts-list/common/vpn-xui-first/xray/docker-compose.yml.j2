---

services:
  xray:
    image: teddysun/xray
    cpus: "0.5"
    mem_limit: 200m
    container_name: xray
    volumes:
      - ./config:/etc/xray
    env_file:
      - .env
    networks:
      - {{ docker_service_vars.network.name }}
    restart: unless-stopped

  xray-nginx:
    image: nginx:latest
    cpus: "0.5"
    mem_limit: 200m
    container_name: xray-nginx
    hostname: ${DOMAIN}
    volumes:
      - ./nginx/servers/:/etc/nginx/servers/
      - ./nginx/static/:/var/www/html/
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - {{ cert_location_root_path }}:/etc/letsencrypt:ro
    networks:
      - {{ docker_service_vars.network.name }}
    ports:
      - "${XRAY_WS_PORT}:443/tcp"
    restart: unless-stopped

networks:
  {{ docker_service_vars.network.name }}:
    external: true
